{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "process",
			"label": "docker-build",
			"command": "docker",
			"args": [
				"build",
				"-f",
				"${workspaceFolder}/Dockerfile",
				"--pull",
				"${workspaceFolder}"
			]
		},
		{
			"type": "process",
			"label": "docker-run-release",
			"command": "docker",
			"args": ["run", "--rm", "${workspaceFolder}"],
			"dependsOn": ["docker-build"]
		},
		{
			"type": "process",
			"label": "docker-run-debug",
			"command": "docker",
			"args": [
				"run",
				"--rm",
				"-e", "DEBUG=*",
				"-e", "NODE_ENV=development",
				"${workspaceFolder}"
			],
			"dependsOn": ["docker-build"]
		},
		{
			"type": "npm",
			"script": "install",
			"group": "build",
			"problemMatcher": [],
			"label": "npm: install",
			"detail": "install dependencies from package"
		},
		{
			"type": "npm",
			"script": "build",
			"group": "build",
			"problemMatcher": [],
			"label": "npm: build",
			"detail": "ng build"
		}
	]
}